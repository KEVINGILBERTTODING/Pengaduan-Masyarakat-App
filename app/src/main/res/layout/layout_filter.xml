<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter pengaduan"
            android:fontFamily="@font/popsem"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dari tanggal"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/popsem"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"/>

        <TextView
           android:id="@+id/datePickerFrom"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:editable="false"

            android:background="@drawable/container_edittext2"
            android:hint="Dari tanggal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sampai tanggal"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/popsem"
            android:textSize="@dimen/_12ssp"

            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/datePickerTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:editable="false"


            android:background="@drawable/container_edittext2"
            android:hint="Dari tanggal"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/popsem"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/container_edittext2"
            />








        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter"
            app:cornerRadius="@dimen/_5sdp"
            app:iconSize="@dimen/_10sdp"
            android:fontFamily="@font/popsem"
            app:backgroundTint="@color/orange"
            android:id="@+id/btnFilter"
            android:layout_marginTop="@dimen/_20sdp"
            android:textAllCaps="false"/>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>