<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">
            
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                
                <ImageView
                    android:id="@+id/imgPengaduan"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"/>
                
                <LinearLayout
                    android:layout_toRightOf="@id/imgPengaduan"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_height="wrap_content">



                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_gravity="end"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/containerStatusPengaduan"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtStatus"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/_8sdp"
                                android:fontFamily="@font/popmedit"
                                android:text="Belum ditanggapi"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_location"/>
                        <TextView
                            android:id="@+id/txtKelurahan"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/popmed"
                            android:text="Semarang"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtisiLaporan"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_9sdp"
                        android:maxLength="50"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/popmed"
                        android:text="Retakkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                
            </RelativeLayout>
            
            
            
            
            
            
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>